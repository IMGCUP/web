# Apache 配置檔案
# 用於 AI康斯特專案部署至 /var/www/html/aicustom

<IfModule mod_rewrite.c>
    RewriteEngine On
    # 修改為實際的子目錄名稱
    RewriteBase /aicustom/web/
    
    # 如果請求的是真實存在的檔案或目錄，直接訪問
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # 否則導向 index.html（用於前端路由）
    RewriteRule . /aicustom/web/index.html [L]
</IfModule>

# 啟用 gzip 壓縮以提升效能
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
    AddOutputFilterByType DEFLATE application/javascript text/javascript
    AddOutputFilterByType DEFLATE text/xml application/xml application/xml+rss
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# 設定靜態資源快取
<IfModule mod_expires.c>
    ExpiresActive On
    
    # 樣式表和腳本快取 1 年
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # 圖片快取 1 年
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # PDF 快取 1 個月
    ExpiresByType application/pdf "access plus 1 month"
    
    # 字型快取 1 年
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# 設定正確的 MIME types
<IfModule mod_mime.c>
    AddType text/css .css
    AddType application/javascript .js
    AddType application/json .json
    AddType image/svg+xml .svg
    AddType application/pdf .pdf
    AddType font/woff .woff
    AddType font/woff2 .woff2
</IfModule>

# 安全性設定
<IfModule mod_headers.c>
    # 防止點擊劫持
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # 防止 MIME 類型嗅探
    Header always set X-Content-Type-Options "nosniff"
    
    # XSS 保護
    Header always set X-XSS-Protection "1; mode=block"
    
    # 移除 Server 資訊（增強安全性）
    Header unset Server
</IfModule>

# 禁止訪問隱藏檔案和開發檔案
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<DirectoryMatch "/(\.git|doc|node_modules)">
    Order allow,deny
    Deny from all
</DirectoryMatch>

# 禁止列出目錄內容
Options -Indexes

